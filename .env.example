## REQUIRED ##

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/priory"

NEXT_PUBLIC_API_URL="http://localhost:3000/api" # I think this is for /[id] but I honestly can't remember

# Better Auth
BETTER_AUTH_SECRET="your-secret-key-here-min-32-chars"
NEXT_PUBLIC_BETTER_AUTH_URL="http://localhost:3000"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# GitHub OAuth (technically optional but recommended)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"


## OPTIONAL ##

# Site Configuration
# NEXT_PUBLIC_SITE_NAME="Priory"
# NEXT_PUBLIC_SITE_URL="http://localhost:2009"
# NEXT_PUBLIC_SITE_DESCRIPTION="Made with â™¡ by"
# NEXT_PUBLIC_SITE_REPO="https://github.com/priory-io/www.git"

# Social Links
# NEXT_PUBLIC_SOCIAL_GITHUB="https://github.com/priory-io"
# NEXT_PUBLIC_SOCIAL_DISCORD="https://discord.gg/priory"

# Feature Flags
# ANALYTICS_ENABLE="true"
# NEXT_PUBLIC_DASHBOARD_ACCOUNT_PREFERENCES="1"

# File Storage Configuration
# "r2" (default) or "local"
# STORAGE_TYPE="r2"

# Maximum file upload size in bytes (default: 104857600 = 100MB)
# MAX_FILE_SIZE="104857600"

# Cloudflare R2 Configuration (required if STORAGE_TYPE="r2")
# R2_ACCOUNT_ID="your-cloudflare-account-id"
# R2_ACCESS_KEY_ID="your-r2-access-key-id"
# R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
# R2_BUCKET_NAME="your-r2-bucket-name"
# R2_PUBLIC_URL="https://your-custom-domain.com"

# Local Storage Configuration (used if STORAGE_TYPE="local")
# LOCAL_STORAGE_PATH="/var/priory/files"
# LOCAL_UPLOADS_PATH="/files/uploads"

# Development
# NODE_ENV="development"
